<div class="dvd-container">
    <img src="logo.png" class="dvd-logo" alt="Gym Logo" />
</div>

<style>
    .dvd-container {    
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        z-index: -1;
        background-color: #ffffff;
        pointer-events: none;
        opacity: 1;
    }
    
    .dvd-logo {
        position: absolute;
        width: 120px;
        height: auto;
        animation: bounceX 7s linear infinite alternate, 
                   bounceY 4.5s linear infinite alternate;
    }
    
    @@keyframes bounceX {
        from { left: 0; }
        to { left: calc(100vw - 120px); }
    }
    
    @@keyframes bounceY {
        from { top: 0; }
        to { top: calc(100vh - 120px); }
    }
</style>