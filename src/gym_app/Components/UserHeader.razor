@using gym_app.Models
@using gym_app.Services
@inject GymSystemController Controller
@inject UserSessionService Session

<div class="user-header shadow-sm d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <div class="user-avatar me-3">
            @(string.IsNullOrEmpty(Session.Nickname) ? "?" : Session.Nickname[0].ToString().ToUpper())
        </div>
        
        <div>
            <div class="welcome-text">Witaj z powrotem,</div>
            <div class="user-name">
                @Session.Nickname
                <span class="role-badge @(Session.Role?.ToString().ToLower() ?? "client")">
                    @GetRoleTranslation(Session.Role)
                </span>
            </div>
        </div>
    </div>

    <button class="logout-button" @onclick="Session.Logout" title="Wyloguj się">
        <i class="bi bi-box-arrow-right"></i> Wyloguj
    </button>
</div>

<style>
    .user-header {
        background: white;
        border-radius: 16px;
        padding: 12px 24px;
        margin-bottom: 2rem;
        border: 1px solid #f0f0f0;
    }

    .user-avatar {
        width: 45px;
        height: 45px;
        background: #0d6efd;
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        box-shadow: 0 4px 10px rgba(13, 110, 253, 0.2);
    }

    .welcome-text {
        font-size: 0.75rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: -2px;
    }

    .user-name {
        font-weight: 700;
        font-size: 1.1rem;
        color: #2d3436;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .role-badge {
        font-size: 0.65rem;
        padding: 4px 10px;
        border-radius: 20px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .role-badge.client {
        background: #e3f2fd;
        color: #0d6efd;
    }

    .role-badge.employee {
        background: #fff3e0;
        color: #ef6c00;
    }
    
    .logout-button {
        background: transparent;
        border: 2px solid #ffeded;
        color: #ff4757;
        padding: 8px 16px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .logout-button:hover {
        background: #ff4757;
        color: white;
        border-color: #ff4757;
        transform: translateY(-1px);
    }
</style>

@code {
    private string GetRoleTranslation(UserRole? role) => role switch
    {
        UserRole.Client => "Klient",
        UserRole.Employee => "Trener",
        _ => "Gość"
    };
}